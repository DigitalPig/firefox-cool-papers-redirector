{
  "manifest_version": 2,
  "name": "Cool Papers Redirector",
  "version": "1.0.0",
  "description": "Redirect arXiv papers to papers.cool with a simple right-click menu option",
  
  "permissions": [
    "contextMenus",
    "tabs",
    "activeTab",
    "*://arxiv.org/*"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}